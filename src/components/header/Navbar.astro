---
import Cart from '@/components/cart/Cart'
import { ModeToggle } from '../ui/ModeToggle'
import IconCart from '../cart/IconCart'
---

<nav class='relative flex items-center h-12 px-6 md:px-4 lg:px-8 border-b-2'>
  <div>
    <ModeToggle client:load />
  </div>

  <div
    class='absolute left-1/2 transform -translate-x-1/2 flex gap-1 md:gap-2 lg:gap-4'>
    <div
      class='flex items-center cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-800 rounded-lg px-4 py-1'>
      <a href='#news'>Nuevos</a>
    </div>

    <div
      class='flex items-center cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-800 rounded-lg px-4 py-1'>
      <a href='#discounts'>Ofertas</a>
    </div>

    <div
      class='flex items-center cursor-pointer hover:bg-gray-200 dark:hover:bg-gray-800 rounded-lg px-4 py-1'>
      <a
        href='#top-sells'
        class='text-nowrap'
        >Populares</a
      >
    </div>
  </div>

  <div class='ml-auto'>
    <button class='snipcart-checkout'> Carrito </button>
  </div>
</nav>
